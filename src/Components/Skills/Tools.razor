@if (ToolsList == null)
{
    <div>Loading...</div>
}
else
{

    <div class="row mt-3">
        <div class="col-12 no-padd">Tools/Utilities</div>
        <div class="col-12 col-md-9 mt-1 no-padd label">
            @foreach (var (Tool, index) in ToolsList.Select((value, i) => (value, i)))
            {
                if (index == (ToolsList.Length - 1))
                {
                    <span>@Tool </span>
                }
                else
                {
                    <span>@Tool, </span>
                }
            }
        </div>
    </div>

}

@code {
    [Parameter]
    public string[] ToolsList { get; set; } = new string[0];
}
