@typeparam TItem
@typeparam TItem2

@if (Items == null)
{
    if (NullTemplate == null)
    {
        <text>Loading...</text>
    }
    else
    {
        @NullTemplate
    }
}
else if (Items.Count == 0)
{
    <text>There are no records to display</text>
}
else
{
    <CRUDTable Items="@Items" NewItem="@NewItem" Name="@Name" TableHeader=@TableHeader RowTemplate=@RowTemplate CreateRowTemplate="@CreateRowTemplate" />
}


@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter] public List<TItem> Items { get; set; }

    [Parameter] public TItem2 NewItem { get; set; }


    [Parameter]
    public RenderFragment TableHeader { get; set; }

    [Parameter]
    public RenderFragment<TItem2> CreateRowTemplate { get; set; }

    [Parameter]
    public RenderFragment<TItem> RowTemplate { get; set; }
    [Parameter] public RenderFragment NullTemplate { get; set; }
}


